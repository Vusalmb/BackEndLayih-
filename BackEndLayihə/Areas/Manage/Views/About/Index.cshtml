@model WelcomeEduHome
@{
    ViewData["Title"] = "Index";
}

@*@section Css{
    <link rel="stylesheet" href="sweetalert2.min.css">
}*@

<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            Image
                        </th>
                        <th>
                            Desc
                        </th>
                        <th>
                            Settings
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Model.Id
                        </td>
                        <td>
                            <img style="width: 80px; height: 80px;" src="@Model.Image" alt="welcome_image" />
                        </td>
                        @if (Html.Raw(Model.Desc) == null)
                        {
                            <td></td>
                        }
                        else if(Html.Raw(Model.Desc.Length>50)!=null)
                        {
                            <td>@Html.Raw(Model.Desc.Substring(0, 50))....</td>
                        }
                        else
                        {
                            <td>@Model.Desc</td>
                        }
                        <td>
                            <a asp-controller="about" asp-action="edit" asp-route-id="@Model.Id" class="btn btn-warning btn-icon-text">
                                <i class="mdi mdi-file-check btn-icon-append"></i>
                                Edit
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
