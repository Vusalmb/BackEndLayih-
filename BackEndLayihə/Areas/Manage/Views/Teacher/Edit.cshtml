@model Teacher
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="mt-5">
            <h2 class="mb-4">Edit Teacher Section</h2>
            <div class="mt-3">
                <h4>Current Teacher Image</h4>
                <img src="~/img/teacher/@Model.Image" width="400" height="300" alt="teacher_image" />
            </div>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <form method="post" class="mt-3" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Teacher Name</label>
                    <input asp-for="@Model.Name" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Name"></span>
                    <hr />
                    <label asp-for="@Model.Speciality" class="form-label">Speciality</label>
                    <input asp-for="@Model.Speciality" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Speciality"></span>
                    <hr />
                    <label asp-for="@Model.Desc" class="form-label">Description</label>
                    <input asp-for="@Model.Desc" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Desc"></span>
                    <hr />
                    <label asp-for="@Model.Degree" class="form-label">Degree</label>
                    <input asp-for="@Model.Degree" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Degree"></span>
                    <hr />
                    <label asp-for="@Model.Experience" class="form-label">Experience</label>
                    <input asp-for="@Model.Experience" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Experience"></span>
                    <hr />
                    <label asp-for="@Model.Mail" class="form-label">Mail</label>
                    <input asp-for="@Model.Mail" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Mail"></span>
                    <hr />
                    <label asp-for="@Model.Phone" class="form-label">Phone</label>
                    <input asp-for="@Model.Phone" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Phone"></span>
                    <hr />
                    <label asp-for="@Model.ImageFile" accept="image/*" class="form-label">Select Image</label>
                    <input asp-for="@Model.ImageFile" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.ImageFile"></span>
                    <hr />
                    <label asp-for="@Model.HobbyIds" class="form-label">Hobbies</label>
                    <select asp-for="@Model.HobbyIds" class="form-select">
                        @foreach (var hobby in ViewBag.Hobbies)
                        {
                            @if (Model.TeacherHobbies.FirstOrDefault(th => th.HobbyId == hobby.Id) != null)
                            {
                                <option value="@hobby.Id" selected>@hobby.Name</option>
                            }
                            else
                            {
                                <option value="@hobby.Id">@hobby.Name</option>
                            }
                        }
                    </select>
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.HobbyIds"></span>
                    <hr />
                    <label asp-for="@Model.FaculityIds" class="form-label">Faculities</label>
                    <select asp-for="@Model.FaculityIds" class="form-select">
                        @foreach (var faculity in ViewBag.Faculities)
                        {
                            @if (Model.TeacherFaculities.FirstOrDefault(tf => tf.FaculityId == faculity.Id) != null)
                            {
                                <option value="@faculity.Id" selected>@faculity.Name</option>
                            }
                            else
                            {
                                <option value="@faculity.Id">@faculity.Name</option>
                            }
                        }
                    </select>
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.FaculityIds"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts{
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

}