@model Course
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="mt-5">
            <h2 class="mb-4">Create Course Section</h2>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <form method="post" class="mt-3" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="@Model.ImageFile" accept="image/*" class="form-label">Select Image</label>
                    <input asp-for="@Model.ImageFile" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.ImageFile"></span>
                    <hr />
                    <label asp-for="@Model.Name" class="form-label">Course Name</label>
                    <input asp-for="@Model.Name" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Name"></span>
                    <hr />
                    <label asp-for="@Model.Detail" class="form-label">Detail</label>
                    <input asp-for="@Model.Detail" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Detail"></span>
                    <hr />
                    <label asp-for="@Model.About" class="form-label">About</label>
                    <input asp-for="@Model.About" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.About"></span>
                    <hr />
                    <label asp-for="@Model.Apply" class="form-label">Apply</label>
                    <input asp-for="@Model.Apply" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Apply"></span>
                    <hr />
                    <label asp-for="@Model.Certification" class="form-label">Certification</label>
                    <input asp-for="@Model.Certification" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Certification"></span>
                    <hr />
                    <label asp-for="@Model.CourseFeature.Start" class="form-label">CourseFeature Start</label>
                    <input asp-for="@Model.CourseFeature.Start" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.CourseFeature.Start"></span>
                    <hr />
                    <label asp-for="@Model.CourseFeature.Duration" class="form-label">CourseFeature Duration</label>
                    <input asp-for="@Model.CourseFeature.Duration" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.CourseFeature.Duration"></span>
                    <hr />
                    <label asp-for="@Model.CourseFeature.ClassDuration" class="form-label">CourseFeature ClassDuration</label>
                    <input asp-for="@Model.CourseFeature.ClassDuration" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.CourseFeature.ClassDuration"></span>
                    <hr />
                    <label asp-for="@Model.CourseFeature.SkillLevel" class="form-label">CourseFeature SkillLevel</label>
                    <input asp-for="@Model.CourseFeature.SkillLevel" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.CourseFeature.SkillLevel"></span>
                    <hr />
                    <label asp-for="@Model.CourseFeature.Language" class="form-label">CourseFeature Language</label>
                    <input asp-for="@Model.CourseFeature.Language" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.CourseFeature.Language"></span>
                    <hr />
                    <label asp-for="@Model.CourseFeature.Student" class="form-label">CourseFeature Student</label>
                    <input asp-for="@Model.CourseFeature.Student" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.CourseFeature.Student"></span>
                    <hr />
                    <label asp-for="@Model.CourseFeature.Assesment" class="form-label">CourseFeature Assesment</label>
                    <input asp-for="@Model.CourseFeature.Assesment" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.CourseFeature.Assesment"></span>
                    <hr />
                    <label asp-for="@Model.CourseFeature.Price" class="form-label">CourseFeature Price</label>
                    <input asp-for="@Model.CourseFeature.Price" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.CourseFeature.Price"></span>
                    <hr />
                    <label asp-for="@Model.CategoryId" class="form-label">Categories</label>
                    <select asp-for="@Model.CategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                    </select>
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.CategoryId"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}