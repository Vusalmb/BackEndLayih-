@model Event
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="mt-5">
            <h2 class="mb-4">Create Event Section</h2>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <form method="post" class="mt-3" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="@Model.ImageFile" accept="image/*" class="form-label">Select Image</label>
                    <input asp-for="@Model.ImageFile" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.ImageFile"></span>
                    <hr />
                    <label asp-for="@Model.Name" class="form-label">Event Name</label>
                    <input asp-for="@Model.Name" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Name"></span>
                    <hr />
                    <label asp-for="@Model.Detail" class="form-label">Detail</label>
                    <input asp-for="@Model.Detail" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Detail"></span>
                    <hr />
                    <label asp-for="@Model.StartDate" class="form-label">StartDate</label>
                    <input asp-for="@Model.StartDate" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.StartDate"></span>
                    <hr />
                    <label asp-for="@Model.EndDate" class="form-label">EndDate</label>
                    <input asp-for="@Model.EndDate" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.EndDate"></span>
                    <hr />
                    <label asp-for="@Model.Address" class="form-label">Address</label>
                    <input asp-for="@Model.Address" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Address"></span>
                    <hr />
                    <label asp-for="@Model.SpeakerIds" class="form-label">Speakers</label>
                    <select asp-for="@Model.SpeakerIds" class="form-select" asp-items="@(new SelectList(ViewBag.Speakers, "Id", "Name"))">
                    </select>
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.SpeakerIds"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}