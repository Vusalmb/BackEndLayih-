@model List<Blog>
@{
    ViewData["Title"] = "RightSideBar";
}

<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>blog / right side bar</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    @foreach (Blog blogs in Model)
                    {
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <div class="single-blog mb-60">
                                <div class="blog-img">
                                    <a target="_blank" asp-controller="blog" asp-action="detail" asp-route-id="@blogs.Id"><img src="~/img/blog/@blogs.Image" alt="blog"></a>
                                    <div class="blog-hover">
                                        <i class="fa fa-link"></i>
                                    </div>
                                </div>
                                <div class="blog-content">
                                    <div class="blog-top">
                                        <p>@blogs.Date.ToString("dd MMMM yyyy")<i class="fa fa-comments-o"></i> 4</p>
                                    </div>
                                    <div class="blog-bottom">
                                        <h2><a target="_blank" asp-controller="blog" asp-action="detail" asp-route-id="@blogs.Id">@blogs.Name</a></h2>
                                        <a target="_blank" asp-controller="blog" asp-action="detail" asp-route-id="@blogs.Id">read more</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="mt-4">
                    <nav aria-label="...">
                        <ul class="pagination d-flex justify-content-center">
                            @if (ViewBag.CurrentPage == 1)
                            {
                                <li class="page-item disabled">
                                    <a class="page-link" asp-controller="blog" asp-action="rightsidebar" asp-route-page="@(ViewBag.CurrentPage-1)">Previous</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-controller="blog" asp-action="rightsidebar" asp-route-page="@(ViewBag.CurrentPage-1)">Previous</a>
                                </li>
                            }

                            @for (int i = 1; i <= ViewBag.TotalPage; i++)
                            {
                                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")" style="@(ViewBag.CurrentPage == i ? "pointer-events: none;" : "")">
                                    <a class="page-link" asp-controller="blog" asp-action="rightsidebar" asp-route-page="@i">@i</a>
                                </li>
                            }

                            @if (ViewBag.CurrentPage == ViewBag.TotalPage)
                            {
                                <li class="page-item disabled">
                                    <a class="page-link" asp-controller="blog" asp-action="rightsidebar" asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-controller="blog" asp-action="rightsidebar" asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <div class="single-blog-widget mb-50">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" action="#">
                                <input type="search" placeholder="Search..." name="search" />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <div class="single-blog-banner">
                            <a href="blog-details.html" id="blog"><img src="~/img/blog/blog-img.jpg" alt="blog"></a>
                            <h2>best<br> eductaion<br> theme</h2>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>blog post</h3>
                        @foreach (var item in ViewBag.BlogOrder)
                        {
                            <div class="single-post mb-30">
                                <div class="single-post-img">
                                    <a href="blog-details.html">
                                        <img src="~/img/blog/@item.Image" alt="post" style="width: 120px;">
                                        <div class="blog-hover">
                                            <i class="fa fa-link"></i>
                                        </div>
                                    </a>
                                </div>
                                <div class="single-post-content">
                                    <h4><a href="blog-details.html">@item.Name</a></h4>
                                    <p>@item.Date.ToString("dd MMMM yyyy")</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Blog End -->
<!-- Subscribe Start -->
